{
  "source": {
    "include": ["src"],    
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "./docs-static",  
    "recurse": true,
    "readme":"./index.md",
    "tutorials": "./doc-src",
    "template": "node_modules/docdash"
  },
  "plugins": [
    "plugins/markdown"  
  ],
  "templates": {
    "default": {
      "outputSourceFiles": false,
      "staticFiles": {
        "include": ["./doc-src/custom-dark.css"]
      }
    }
  },
   "markdown": {
    "idInHeadings": true
  },
  "docdash":{
    "sort":false,
    "search":false,
    "scripts":["custom-dark.css"]
  }
}
